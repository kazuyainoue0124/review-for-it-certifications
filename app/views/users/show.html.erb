<% if current_user == @user %>
  <% provide(:title, 'マイページ') %>
<% else %>
  <% provide(:title, @user.name) %>
<% end %>

<% if current_user == @user %>
  <h1 class="text-center">マイページ</h1>
<% else %>
  <h1 class="text-center">ユーザー詳細</h1>
<% end %>
<div class="row">
  <%= render 'layouts/current_user_info' %>
  <div class="col-md-6 col-md-offset-3 mx-auto">
    <%= render 'users/profile' %>

    <% if @user.posts.any? %>
      <%= render 'posts/list' %>
    <% end %>

  </div>
  <div class="col-md-3">
  </div>
</div>