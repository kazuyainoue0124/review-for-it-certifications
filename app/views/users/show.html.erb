<% if current_user == @user %>
  <% provide(:title, 'マイページ') %>
<% else %>
  <% provide(:title, @user.name) %>
<% end %>

<div class="mb-3 w-75 mx-auto text-center">
  <section class="user_info mx-auto">
    <div class="card mx-auto" style="width: 54rem;">
      <div class="card-body">
        <h5 class="card-title"><%= @user.name %></h5>
        <h6><%=  "@user1accountid" %></h6>
        <%= link_to "〇〇 フォロー", "#", class: "card-link" %>
        <%= link_to "〇〇 フォロワー", "#", class: "card-link" %>
        <p class="card-text">職業（ポジション）：<%= @user.position.name if @user.position_id %>　転職回数：<%= @user.job_change_count %>　最も役に立った資格：<%= @user.certificate.name if @user.certificate_id %></p>
        <p class="card-text">直近3年間の年収推移：<%= @user.salary_before_two_years %> → <%= @user.salary_before_one_years %> → <%= @user.current_salary %></p>
        <p class="card-text"><%= @user.profile %></p>
        <% if current_user?(@user) %>
          <%= link_to "編集", edit_user_path(current_user), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </section>
</div>
