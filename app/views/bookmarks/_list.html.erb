<% @bookmarks.each do |bookmark| %>
  <div class="card">
    <h5 class="card-header"><%= link_to bookmark.post.user.name, user_path(bookmark.post.user) %></h5>
    <div class="card-body">
      <h5 class="card-title"><%= link_to bookmark.post.title, post_path(bookmark.post.id) %></h5>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
