<div class="col-md-3">
  <section class="user_info">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%=link_to @post.user.name, user_path(@post.user) %></h5>
        <p class="card-text"><%= @post.user.profile %></p>
        <%= link_to @post.user.followings.count.to_s + " フォロー", user_followings_path(@post.user), class: "card-link" %>
        <%= link_to @post.user.followers.count.to_s + " フォロワー", user_followers_path(@post.user), class: "card-link" %>
        <% if current_user?(@post.user) %>
          <%= link_to "記事を編集", edit_post_path(@post), class: "card-link" %>
        <% end %>
      </div>
    </div>
  </section>
</div>