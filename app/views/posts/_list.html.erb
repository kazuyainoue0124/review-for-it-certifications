<% @posts.each do |post| %>
  <div class="card">
    <h5 class="card-header"><%= link_to post.user.name, user_path(post.user) %></h5>
    <div class="card-body">
      <h5 class="card-title"><%= link_to post.title, post_path(post.id) %></h5>
    </div>
  </div>
<% end %>
<div class="d-flex justify-content-center">
  <% if @posts.count > 10 %>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% end %>
</div>