<header>
  <nav id="header-nav" class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="<%= root_path %>">
          <i class="fa-solid fa-pen"></i>
          シカクチコミ!<small> - IT資格の口コミアプリ -</small>
        </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item my-auto">
            <%= form_with url: search_path, class: 'd-flex ms-auto', local: true, method: :get do |f| %>
              <%= f.text_field :word, class: "form-control me-2 search-box" %>
              <%= f.submit "検索", class: "btn", id: "search-btn" %>
            <% end %>
          </li>
          <% if logged_in? %>
            <li class="nav-item">
              <%= link_to "投稿する", new_post_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", logout_path, class: "nav-link active", method: :delete %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "ログイン", login_path, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", signup_path, class: "nav-link active" %>
            </li>
          <% end %>
        </ul>
      </div>
  </nav>
</header>