<% provide(:title, "ログイン") %>
<% provide(:button_text, "ログイン") %>

<div class="mb-3 w-75 mx-auto">
  <h1 class="text-center">ログイン</h1>
  <div class="col-md-6 col-md-offset-3 mx-auto" id="login-form">
    <%= form_with(url: login_path, scope: :session, local: false) do |f| %>
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: 'form-control', id: "password" %>
      <div class="d-grid col-12">
        <%= f.submit yield(:button_text), class: "btn btn-primary" %>
        <p>新規登録は<%= link_to "こちら", signup_path %></p>
      </div>
    <% end %>
  </div>
</div>